<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:textSize="32sp"
        android:textColor="@color/dark_navy_blue"
        android:fontFamily="sans-serif-medium"
        android:alpha="0"
        android:translationY="50dp"
        app:layout_constraintBottom_toTopOf="@+id/welcomeMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="0dp"
        android:textColor="@color/dark_navy_blue"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="Nous sommes ravis de vous revoir parmi nous."
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:alpha="0"
        android:translationY="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="@id/welcomeMessage"
        app:layout_constraintLeft_toLeftOf="@id/welcomeMessage"
        app:layout_constraintRight_toRightOf="@id/welcomeMessage"
        app:layout_constraintTop_toTopOf="@id/welcomeTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
